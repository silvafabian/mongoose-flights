<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">

    <label for="airline-input">Airline:</label>
    <input type="text" name="airline" value="<%= flight.airline %>" id="airline-input">
    <label for="flightNo">Flight Number:</label>
    <input type="text" name="flightNo" value="<%= flight.flightNo %>" id="flightNo">
    <label for="departs">Departs:</label>
    <input type="datetime-local" name="departs" value="<%= flight.departs %>" id="departs">
    <label for="airport">Airport:</label>
    <select name="airport" value="<%= flight.airport %>" id="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN" selected>DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <button type="submit">Save Flight</button>
  </form>
</main>

  <%- include("../partials/footer") %>